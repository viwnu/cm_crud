{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/api-doc": [
        "libs/shared/api-doc/src"
      ],
      "@app/api-doc/*": [
        "libs/shared/api-doc/src/*"
      ],
      "@app/auth": [
        "libs/shared/auth/src"
      ],
      "@app/auth/*": [
        "libs/shared/auth/src/*"
      ],
      "@app/serializer": [
        "libs/shared/serializer/src"
      ],
      "@app/serializer/*": [
        "libs/shared/serializer/src/*"
      ],
      "@app/decorators": [
        "libs/shared/decorators/src"
      ],
      "@app/decorators/*": [
        "libs/shared/decorators/src/*"
      ]
    }
  },
  "include": ["./**/*", "src/db/*"]
}