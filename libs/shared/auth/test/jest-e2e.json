{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../../../../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/decorators/(.*)": "<rootDir>/libs/shared/decorators/src/$1",
    "@app/decorators": "<rootDir>/libs/shared/decorators/src"
  }
}