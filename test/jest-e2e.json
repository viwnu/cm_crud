{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/api-doc/(.*)": "<rootDir>/../libs/shared/api-doc/src/$1",
    "@app/api-doc": "<rootDir>/../libs/shared/api-doc/src"
  }
}