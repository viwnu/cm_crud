{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/api-doc/(.*)": "<rootDir>/../libs/shared/api-doc/src/$1",
    "@app/api-doc": "<rootDir>/../libs/shared/api-doc/src",
    "@app/auth/(.*)": "<rootDir>/../libs/shared/auth/src/$1",
    "@app/auth": "<rootDir>/../libs/shared/auth/src",
    "@app/serializer/(.*)": "<rootDir>/../libs/shared/serializer/src/$1",
    "@app/serializer": "<rootDir>/../libs/shared/serializer/src",
    "@app/decorators/(.*)": "<rootDir>/../libs/shared/decorators/src/$1",
    "@app/decorators": "<rootDir>/../libs/shared/decorators/src",
    "@app/logger/(.*)": "<rootDir>/../libs/shared/logger/src/$1",
    "@app/logger": "<rootDir>/../libs/shared/logger/src"
  }
}